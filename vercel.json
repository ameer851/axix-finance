{
  "__comment": "Updated vercel configuration - August 4, 2025",
  "version": 2,
  "buildCommand": "node vercel-build-helper.cjs && npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "api/**/*": {
      "runtime": "@vercel/node@2.15.3"
    }
  },
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/server"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/server",
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/fallback"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}